#:kivy 1.11.1
ScreenManager:
    id : screen_manager
    Screen:
        name : "main"
        BoxLayout:
            orientation: "vertical"

            MDToolbar:
                title: app.title
                elevation: 10
                md_bg_color: app.theme_cls.primary_color
            MDTabs:
                id: tabs_
                lock_swiping : True
                on_tab_switch: app.on_tab_switch(*args)


        MDFloatingActionButtonSpeedDial:
            id : FloatingDial
            data : {"update": "Update Category","all-inclusive": "Update Library","plus": "Add Item"}
            callback : app.FloatingActionButton_callback
            rotation_root_button: True