#:kivy 1.11.1
<AboutTab@ScrollView+MDTabsBase>:
    text : "About"
    do_scroll_x: False
    effect_cls : "OpacityScrollEffect"
    scroll_type : ["bars", "content"]
    bar_pos_y : "right"    
    bar_color : app.theme_cls.primary_dark
    bar_inactive_color : app.theme_cls.primary_color
    bar_width : 10
<ChapterListTab@ScrollView+MDTabsBase>:
    text : "Chapter List"
    do_scroll_x: False
    effect_cls : "OpacityScrollEffect"
    scroll_type : ["bars", "content"]
    bar_pos_y : "right"    
    bar_color : app.theme_cls.primary_dark
    bar_inactive_color : app.theme_cls.primary_color
    bar_width : 10
    MDStackLayout:
        adaptive_height : True
        MDLabel:
            text: "1"
        MDLabel:
            text: "1"
        MDLabel:
            text: "1"
        MDLabel:
            text: "1"
        MDLabel:
            text: "1"
        MDLabel:
            text: "1"

<LibraryItemScreen>:
    id : library_item_screen
    name : "library_item_screen"
    MDTabs:
        id : tabs
        on_tab_switch : pass
        AboutTab:
            MDBoxLayout:
                adaptive_height : True
                padding : "25dp"
                spacing : dp(50)
                MDFloatingActionButton:
                    on_press : app.root.current = app.root.previous()
                    on_press : app.root.remove_widget(app.root.screens[-1])
                    pos_hint : {'top':1,'right':0}
                    icon : "keyboard-backspace"
                    md_bg_color: app.theme_cls.primary_color
                MDBoxLayout:
                    id : about_box
                    orientation: "vertical"
                    pos_hint: {"top":1,"right":0}
                    adaptive_size : True
                    spacing : dp(70)
                    MDBoxLayout:
                        spacing : dp(20)
                        adaptive_size: True
                        MDCard:
                            id : card
                            elevation: 12
                            size_hint: None,None
                            size: "150dp", "200dp"
                            radius: [(15 / self.width) * 100, ]                    
                            FitImage:
                                id : item_image
                                source: root.iten_instance.source
                                size_hint: None, None
                                size: card.size
                                radius : card.radius
                        MDBoxLayout:
                            orientation: "vertical"
                            size_hint : (None,0.9)
                            width : dp(130)
                            MDLabel:
                                text : "Author : "+str(root.iten_instance.scraper.about["Author"])
                            MDLabel:
                                text : "Status : " + str(root.iten_instance.scraper.about["Status"])
                            MDLabel:
                                text : "Updated : "+str(root.iten_instance.scraper.about["Updated"])
                            MDLabel:
                                text : "Chapters : " + str(root.iten_instance.scraper.about["Chapters"])
                    MDLabel:
                        text: root.iten_instance.scraper.about["Summary"]
                        size_hint: (2,None)
                        height: self.texture_size[1]
